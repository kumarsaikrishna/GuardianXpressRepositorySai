@model GuardiansExpress.Models.DTOs.LoginRequest
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="">
	<meta name="author" content="">
	<link rel="icon" href="">

	<title>Guardians Express - Log in </title>

	<!-- Vendors Style-->
	<link rel="stylesheet" href="~/Resources/src/css/vendors_css.css">

	<!-- Style-->
	<link rel="stylesheet" href="~/Resources/src/css/style.css">
	<link rel="stylesheet" href="~/Resources/src/css/skin_color.css">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />


	<style>
		.password-wrapper {
			position: relative;
		}

			.password-wrapper input[type="password"],
			.password-wrapper input[type="text"] {
				padding-right: 2.5rem; /* Add space for the eye icon */
			}

		.toggle-password {
			position: absolute;
			top: 50%;
			right: 10px;
			transform: translateY(-50%);
			cursor: pointer;
			color: #999;
		}
	</style>
</head>

<body class="hold-transition theme-primary bg-img" style="background-image: url(Resources/images/auth-bg/bg-16.jpg)">

	<div class="container h-p100">
		<div class="row align-items-center justify-content-md-center h-p100">

			<div class="col-12">
				<div class="row justify-content-center g-0">
					<div class="col-lg-5 col-md-5 col-12">
						<div class="bg-white rounded10 shadow-lg">
							<div class="content-top-agile p-20 pb-0">
								<!-- logo-->
								<div class="logo-mini">
									<span class="light-logo"><img src="~/Resources/images/logo-letter.png" width="150px" alt="logo"></span>
									<span class="dark-logo"><img src="~/Resources/images/logo-white-letter.png" alt="logo"></span>
								</div>
								
							</div>
							<div class="p-40">
								<form action="~/Authenticate/Login" method="post">
									<div class="form-group">
										<div class="input-group mb-5">
											<span class="input-group-text bg-transparent"><i class="text-fade ti-user"></i></span>
											<input type="email" class="form-control ps-15 bg-transparent" placeholder="Enter your email" name="emailId" value="@Model.emailId">
											@Html.ValidationMessageFor(b => b.emailId, null, new { @class = "text-danger" })
										</div>
									</div>
									<div class="form-group">
										<div class="input-group mb-5 password-wrapper">
											<span class="input-group-text  bg-transparent"><i class="text-fade ti-lock"></i></span>
											<input type="password" class="form-control ps-15 bg-transparent" placeholder="Enter your password" name="password" id="passwordField" />
											<i class="fa fa-eye toggle-password" id="togglePasswordIcon" onclick="togglePassword()"></i>
										</div>
										@Html.ValidationMessage("password", new { @class = "text-danger" })
									</div>

									

									<div class="row">
										<div class="col-6">
											<div class="checkbox">
												<input type="checkbox" id="basic_checkbox_1">
												<label for="basic_checkbox_1">Remember Me</label>
											</div>
										</div>
										<!-- /.col -->
										<!-- /.col -->
										<div class="col-12 text-center">
											<button type="submit" class="btn btn-primary w-p100 mt-10">SIGN IN</button>
										</div>
										<!-- /.col -->
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


	<!-- Vendor JS -->
	<script src="~/Resources/src/js/vendors.min.js"></script>
	<script src="~/Resources/src/js/pages/chat-popup.js"></script>
	<script src="../../../assets/icons/feather-icons/feather.min.js"></script>

</body>

</html>
<script>
	function togglePassword() {
		const passwordInput = document.getElementById('passwordField');
		const toggleIcon = document.getElementById('togglePasswordIcon');
		const isPassword = passwordInput.type === 'password';

		passwordInput.type = isPassword ? 'text' : 'password';
		toggleIcon.classList.toggle('fa-eye');
		toggleIcon.classList.toggle('fa-eye-slash');
	}
</script>