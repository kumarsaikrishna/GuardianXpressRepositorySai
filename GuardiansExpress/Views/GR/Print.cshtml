                            <th width="25%" style="border:1px solid #000;">DESCRIPTION</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td rowspan="2" style="border:1px solid #000; vertical-align: top;">
                                @(Model.NoOfPackages.HasValue ? Model.NoOfPackages.Value.ToString() : "Loose")
                            </td>

                            <td rowspan="2" style="border:1px solid #000; vertical-align: top;">@Model.Description</td>
                            <td colspan="2" style="border:1px solid #000;">
                                <table>
                                    <tr>
                                        <td>
                                            <div style="display: flex; justify-content: space-between;">
                                                Gross Weight -<strong> @Model.GrossWeight MT</strong>

                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div style="display: flex; justify-content: space-between;">
                                                Load Weight -   <strong>@Model.GrossWeight MT</strong>
                                            </div>
                                        </td>
                                    </tr>
                                </table>

                            </td>
                            <td colspan="2" style="border:1px solid #000; text-align: right;">
                                <strong>Invoice Value @Model.InvoiceValue</strong>
                            </td>
                        </tr>

                        <tr>
                            <td colspan="2" style="border:1px solid #000;">
                                Invoice No &amp; Date: <strong>@Model.InvoiceNumber </strong>
                            </td>
                            <td colspan="4" style="border:1px solid #000;">
                                <table>
                                    <tr>
                                        <div style="display: flex; justify-content: space-between;">
                                            <span><strong>E-Way Bill No/Date:</strong> @Model.EWayBillNumber/@Model.EWayBillDate</span>

                                        </div>
                                    </tr>
                                    <tr>
                                        <div style="display: flex; justify-content: space-between;">
                                            <span><strong>Exp Date:</strong> @Model.ExpiryDate</span>

                                        </div>
                                    </tr>
                                </table>

                            </td>
                        </tr>
                    </tbody>

                </table>
            </td>
        </tr>

        <!-- Declaration Section -->
        <tr>
            <td style="padding:8px; border:1px solid #000;">
                <p style="margin:4px 0;"><strong>Declaration: GST to be paid by</strong></p>
                <div style="display:flex; justify-content:space-between; align-items:flex-end;">
                    <div style="flex:1;">
                        □ Consignor □ Consignee ☑ Transporter
                    </div>
                    <div style="text-align:right;">
                        <p style="margin:4px 0;">For GUARDIANS XPRESS PRIVATE LIMITED</p>
                        <div style="border-bottom:1px solid #000; width:200px; margin-top:20px;"></div>
                        <span>Booking Incharge Sign</span>
                    </div>
                </div>
            </td>
        </tr>
    </table>


</div>

