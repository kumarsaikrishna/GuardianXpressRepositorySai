                            <h4 style="margin:5px 0; font-size:14px;">@Model.ConsigneeName.</h4>
                            @Model.ConsigneeAddress<br>
                            <strong>State: @Model.ConsigneeState</strong>
                            <span style="float:right"><strong>GSTIN: @Model.ConsigneeGSTIN</strong></span>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>

